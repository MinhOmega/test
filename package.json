{
  "name": "test-release-it",
  "version": "0.2.6",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "release": "pnpm release-it"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "releaseNotes": "gh release view v${version} --repo ${github.repository} --json body --jq .body || echo '## What''s Changed\n'$(git log v${latestVersion}..HEAD --pretty=format:'* %s by @%an in https://github.com/${github.repository}/pull/%H\n' | grep -v 'Merge pull request' | sort -u)\n\n**Full Changelog**: https://github.com/${github.repository}/compare/v${latestVersion}...v${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "pnpm lint"
      ],
      "after:release": "echo Successfully released ${name} v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    },
    "skipVersion": true,
    "increment": false
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "release-it": "^19.0.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.2",
    "typescript": "^5"
  }
}
