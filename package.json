{
  "name": "test-release-it",
  "version": "0.2.2-beta.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "ci:release:production": "pnpm release-it --ci --git.requireBranch='main'",
    "ci:release:staging": "pnpm release-it --ci --git.requireBranch='staging' --preRelease=rc --github.releaseName='Staging Release v${version}' --github.preRelease=true --hooks.after:bump='pnpm build && echo Building staging release'",
    "ci:release:dev": "pnpm release-it --ci --git.requireBranch='dev' --preRelease=beta --git.commitMessage='chore: dev release v${version}' --github.releaseName='Development Release v${version}' --github.preRelease=true --hooks.after:bump='pnpm build && echo Building development release'"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "releaseNotes": "git log --pretty=format:\"%h %s\" v${latestVersion}..HEAD",
      "tokenRef": "GITHUB_TOKEN"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "pnpm lint"
      ],
      "after:bump": "pnpm build",
      "after:release": "echo Successfully released ${name} v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog\n\nAll notable changes to this project will be documented in this file."
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "release-it": "^19.0.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.2",
    "typescript": "^5"
  }
}
